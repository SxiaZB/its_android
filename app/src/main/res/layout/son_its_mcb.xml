<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/its_list_view"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zhuzb.itsPet.utils.XCRoundImageView
            android:id="@+id/its_mcb_userimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/cw_touxiang" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/its_mcb_usertv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="蓝宝吾皇" />

            <TextView
                android:id="@+id/its_mcb_dj_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十八线名宠" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/its_mcb_fs_tv"
            android:layout_width="235px"
            android:layout_height="88px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/its_mcb_anniu"
            android:gravity="center"
            android:text="+ 粉丝团" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="20dp"-->
        <!--android:text="发表："/>-->
        <!--<TextView-->
        <!--android:id="@+id/its_tva_mcb_fb"-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:text="123456"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="获赞数：" />

        <TextView
            android:id="@+id/its_tva_mcb_hz"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="1234567890" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="粉丝数：" />

        <TextView
            android:id="@+id/its_tva_mcb_fs"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="123456" />
    </LinearLayout>
</LinearLayout>
