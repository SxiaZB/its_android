<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zhuzb.itsPet.utils.XCRoundImageView
            android:id="@+id/message_tvb_imageView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@mipmap/img_touxiang" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_tvb_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="西柚先生"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/message_tvb_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018/05/12 19:23" />
            </LinearLayout>
            <TextView
                android:id="@+id/message_tvb_sx"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingHorizontal="4dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/color9"
                android:textSize="12sp"
                android:text="你好，西柚先生，你的猫好厉害，请问你怎么训练它的？我也想训练我的猫，请多多指教，拜托了！"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
