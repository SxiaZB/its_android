    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/color9" />
            <!-- 线的宽度，颜色 -->
            <stroke android:width="1dp" android:color="@color/color9" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="1dp" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <!-- 填充颜色 -->
            <solid android:color="@color/colorWhite0" />
            <!-- 线的宽度，颜色 -->
            <stroke android:width="1dp" android:color="@color/colorWhite0" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
